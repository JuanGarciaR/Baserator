{
  "name": "base-app",
  "version": "0.0.1",
  "engines": { "node": "~0.10.x" },
  "dependencies": {
    "express": "3.4.7",
    "express-partials": "0.1.1",
    "coffee-script": "1.7.1",
    "coffeecup": "0.3.21",
    "stylus": "0.45.1",
    "jeet": "5.2.10",
    "nib" : "1.0.2",
    "supervisor": "0.6.0"
  },
  "scripts": {
    "start": "npm install && npm run-script compile-coffee && npm run-script start-app",
    "compile-coffee": "./node_modules/coffee-script/bin/coffee -c -o public/assets/js src/client/js",
    "start-app": "node ./node_modules/supervisor/lib/cli-wrapper.js ./node_modules/coffee-script/bin/coffee app.coffee"
  }
}